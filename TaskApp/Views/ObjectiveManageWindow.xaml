<Window x:Class="TaskApp.Views.ObjectiveManageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskApp.Views"
        mc:Ignorable="d"
        Title="ObjectiveManageWindow" Height="550" Width="600">
    <!--Стак панель для расположения всех необходимых полей для создания Objective-->
    <StackPanel Orientation="Vertical" Margin="15" VerticalAlignment="Center">

        <TextBlock Text="Название" Margin="10,10,10,2"/>
        <TextBox x:Name="TitleTextBox" Text="" Margin="10,2,10,10"/>

        <TextBlock Text="Описание" Margin="10,10,10,2"/>
        <TextBox x:Name="DescriptionTextBox" Margin="10,2,10,10" Height="70" TextWrapping="Wrap"/>

        <TextBlock Text="Дата завершения" Margin="10,10,10,2"/>
        <DatePicker x:Name="DateOfEndDatePicker" Margin="10,2,10,10"/>

        <CheckBox x:Name="IsExecutedCheckBox" Content="Выполнено" Margin="10"/>

        <TextBlock Text="Приоритет" Margin="10,10,10,2"/>
        <ComboBox x:Name="PriorityComboBox" Margin="10,2,10,10"/>

        <TextBlock Text="Категория" Margin="10,10,10,2"/>
        <ComboBox x:Name="CategoryComboBox" Margin="10,2,10,10"/>

        <!--Кнопка для добавления/редактирования задачи-->
        <Button x:Name="ActionButton" Margin="10" Content="Action" Click="ActionButton_Click"/>

    </StackPanel>
    
</Window>
