<Window x:Class="TaskApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskApp.Views"
        mc:Ignorable="d"
        Title="Окно входа" Height="200" Width="300" MinHeight="200" MinWidth="300" KeyDown="LoginButton_KeyDown" Background="{StaticResource WindowPrimaryColor}" Icon="/Resources/Assets/Icon.png" FontFamily="Comic Sans MS">

    <!--Стакпанель для размещния элементов по вертикальи (сверху вниз) с отступом 10 ед. и выравниванием по вертикали по центру -->
    <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Center">

        <!--Текстовая надпись для отображения какого-либо из тестов-->
        <TextBlock x:Name="TestTextBlock" Text="TEMPLATE" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"/>

        <!--Тексовое поле для воода результата-->
        <TextBox x:Name="KeyCodeTextBox" Margin="10" TabIndex="1" Style="{StaticResource TextBoxStyle1}" Tag="Введите ответ"/>

        <!--Кнопка для проверки результата и перехода на новое окно-->
        <Button x:Name="LoginButton" Content="ВХОД" Margin="10" Click="LoginButton_Click" TabIndex="0" Style="{StaticResource ButtonStyle1}"/>

    </StackPanel>
    
</Window>
